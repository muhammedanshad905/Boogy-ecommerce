<%- include('../layouts/header') %>
<style>
body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f8f9fa;
    color: #333;
    margin: 0;
    padding: 0;
}

/* Header area */
.header_area {
    background-color: #343a40;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.header_area .navbar {
    padding: 1rem 0;
}

.header_area .navbar-brand {
    color: #fff;
}

.header_area .nav-link1 {
    color: #fff;
    margin-right: 1rem;
    transition: color 0.3s;
}

.header_area .nav-link1:hover {
    color: #ffc107;
}

.header_area .cart, .header_area .search {
    color: #fff;
    margin-left: 1rem;
    transition: color 0.3s;
}

.header_area .cart:hover, .header_area .search:hover {
    color: #ffc107;
}

/* Login box area */
.login_box_area {
    padding: 50px 0;
}

.login_box_img {
    position: relative;
    text-align: center;
    color: white;
}

.login_box_img img {
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

.login_box_img .hover {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: rgba(0, 0, 0, 0.5);
    padding: 20px;
    border-radius: 10px;
}

.login_box_img .hover h4 {
    font-size: 24px;
    margin-bottom: 15px;
}

.login_box_img .hover p {
    font-size: 16px;
    line-height: 1.5;
}

.login_form_inner {
    background: #fff;
    padding: 40px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.login_form_inner h3 {
    margin-bottom: 30px;
    font-size: 28px;
    font-weight: 600;
    color: #333;
}

.login_form_inner .form-control {
    height: 50px;
    padding: 10px 20px;
    border-radius: 5px;
    border: 1px solid #ddd;
}

.login_form_inner .primary-btn {
    background-color: #007bff;
    color: #fff;
    border: none;
    padding: 15px 30px;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s;
}

.login_form_inner .primary-btn:hover {
    background-color: #0056b3;
}

.login_form_inner .otp-field input {
    width: 40px;
    height: 40px;
    text-align: center;
    border-radius: 5px;
    border: 1px solid #ddd;
    margin-right: 10px;
}

.resend {
    margin-top: 20px;
}

#timer {
    margin-top: 10px;
}

/* Responsive styling */
@media (max-width: 768px) {
    .login_box_area {
        padding: 30px 0;
    }

    .login_form_inner {
        padding: 20px;
    }

    .login_box_img img {
        width: 100%;
    }
}

</style>
<body>
    <link rel="stylesheet" href="css/main.css">

    <!-- Start Header Area -->
    <!-- Your header HTML -->

    <section class="login_box_area section_gap">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="login_form_inner">
                        <h3>Reset Your Password</h3>
                        <form class="login_form" action="/resetPassword" method="post" id="contactForm" novalidate="novalidate">
                            <div class="form-group">
                                <input type="password" class="form-control" id="newPassword" name="newPassword" placeholder="New Password" required>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password" required>
                            </div>
                            <div class="col-md-12 form-group">
                                <button type="submit" value="submit" class="primary-btn">Reset Password</button>
                            </div>
                        </form>
                        <% if (typeof message !== "undefined") { %>
                            <p style="color: red;"><%= message %></p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- End Footer Area -->

    <script>
        // Your script for handling any JS functionality
    </script>

    <%- include('../layouts/footer') %>
</body>
