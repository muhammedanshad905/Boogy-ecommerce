body {
    font-family: Arial, sans-serif;
    background-color: #f8f9fa;
    color: #333;
    margin: 0;
    padding: 0;
}

/* Header area */
.header_area {
    background-color: #343a40;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.header_area .navbar-brand {
    display: flex;
    align-items: center;
}

.header_area .navbar-brand img {
    height: 40px;
    margin-right: 10px;
}

.header_area .nav-link1 {
    color: #ffffff !important;
    margin-right: 15px;
    font-weight: 500;
}

.header_area .nav-link1:hover {
    color: #dcdcdc !important;
}

.header_area .dropdown-menu {
    background-color: #343a40;
    border: none;
}

.header_area .dropdown-menu .nav-link {
    color: #ffffff !important;
}

.header_area .dropdown-menu .nav-link:hover {
    color: #dcdcdc !important;
}

.header_area .cart i,
.header_area .search i {
    color: #ffffff;
}

/* Login box area */
.login_box_area {
    padding: 50px 0;
}

.login_box_img {
    text-align: center;
}

.login_box_img img {
    max-width: 100%;
    border-radius: 8px;
}

.login_box_img .hover {
    margin-top: 20px;
}

.login_box_img .hover h4 {
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 10px;
}

.login_box_img .hover p {
    color: #666;
}

.login_form_inner {
    background-color: #ffffff;
    padding: 30px;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.login_form_inner .card-body {
    padding: 0;
}

.login_form_inner .otp-field {
    display: flex;
    justify-content: space-between;
}

.login_form_inner .otp-field input {
    width: 48px;
    height: 48px;
    text-align: center;
    font-size: 24px;
    border: 1px solid #ccc;
    border-radius: 4px;
    margin: 0 4px;
}

.login_form_inner .otp-field input:focus {
    border-color: #007bff;
    outline: none;
}

.login_form_inner .primary-btn {
    width: 100%;
    background-color: #007bff;
    border: none;
    color: #ffffff;
    padding: 10px;
    font-size: 16px;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.login_form_inner .primary-btn:hover {
    background-color: #0056b3;
}

.login_form_inner .resend {
    margin-top: 15px;
    font-size: 14px;
}

.login_form_inner .resend a {
    color: #007bff;
    text-decoration: none;
}

.login_form_inner .resend a:hover {
    text-decoration: underline;
}

#timer {
    font-size: 14px;
    color: #555;
}

#timer span {
    font-weight: 700;
}

/* Responsive design */
@media (max-width: 768px) {
    .login_box_img img {
        margin-bottom: 20px;
    }

    .otp-field {
        justify-content: center;
    }
}
</style>
