    <script>
        function cancelOrder(orderId, itemId) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, cancel it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch('/cancelOrder', {
                        method: 'PATCH',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ orderId, itemId })
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire({
                                title: 'Cancelled!',
                                text: 'Your order has been cancelled.',
                                icon: 'success',
                                // Display success message for 1.5 seconds
                                showConfirmButton: true
                            }).then(() => {
                                location.reload(); // Reload the page after the alert disappears
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Failed to cancel order',
                                showConfirmButton: true  
                            });
                        }
                    })
                    .catch(error => {
                        console.error('Error cancelling order:', error);
                        Swal.fire({
                            icon: 'error',
                            title: 'An error occurred',
                            text: 'Please try again later.',
                            showConfirmButton: true  
                        });
                    });
                }
            });
        }

        function returnOrder(orderId, itemId) {
    Swal.fire({
        title: 'Are you sure?',
        text: "You want to return this item?",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, return it!'
    }).then((result) => {
        if (result.isConfirmed) {
            fetch('/returnOrder', {
                method: 'PATCH',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ orderId, itemId })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        title: 'Returned!',
                        text: 'Your order has been returned.',
                        icon: 'success',
                        showConfirmButton: true
                    }).then(() => {
                        location.reload();
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Failed to return order',
                        showConfirmButton: true
                    });
                }
            })
            .catch(error => {
                console.error('Error returning order:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'An error occurred',
                    text: 'Please try again later.',
                    showConfirmButton: true
                });
            });
        }
    });
}

